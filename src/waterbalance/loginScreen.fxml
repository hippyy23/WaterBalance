            <Image url="@../images/bgLogin.png" />
         </image>
      </ImageView>
      <ImageView fitHeight="279.0" fitWidth="725.0" layoutY="-46.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/hz.png" />
         </image>
      </ImageView>
        <Button fx:id="loginButton" alignment="CENTER" layoutX="283.0" layoutY="327.0" mnemonicParsing="false" onAction="#loginButton" prefHeight="46.0" prefWidth="116.0" style="-fx-background-radius: 50;" text="LOGIN" textFill="#3daac6">
            <font>
                <Font name="Tahoma Bold" size="18.0" />
            </font>
        </Button>
        <TextField fx:id="usernameArea" alignment="CENTER" layoutX="155.0" layoutY="245.0" prefHeight="69.0" prefWidth="371.0" promptText="INSERT YOUR USERNAME">
